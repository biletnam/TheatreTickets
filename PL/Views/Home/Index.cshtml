@model IEnumerable<TheatreViewModel>
<div class="container">
    <div class="row mt-5 ml-5">
        @foreach (var item in Model)
        {
            <div class="card col-md-4 mr-3 border-0">
                <img class="card-img-top" src="@item.Img" />
                <div class="card-body">
                    <a asp-action="Plays" asp-route-theatreId="@item.TheatreId"><h3>@item.Name</h3></a>
                </div>
            </div>
        }
    </div>
</div>